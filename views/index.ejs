<%- include('partials/header') %>

<div class="text-center">
  <h2 class="text-4xl sm:text-5xl font-extrabold text-white">
    Whispers from the <span class="gradient-text">Inside</span>
  </h2>
  <p class="mt-4 text-lg text-gray-400">
    See what our exclusive members are talking about.
  </p>
</div>

<div class="mt-16 space-y-8 px-8">
  <% if (messages.length > 0) { %> <% messages.forEach(message => { %>
  <div
    class="bg-gray-800/50 p-6 rounded-xl shadow-lg post-card border border-gray-700"
  >
    <div class="flex justify-between items-start">
      <h3 class="text-xl font-bold text-white mb-3"><%= message.title %></h3>
      <% if (currentUser && currentUser.isAdmin) { %>
      <form action="/message/<%= message.id %>/delete" method="POST">
        <button
          type="submit"
          class="text-xs text-gray-500 hover:text-red-500 transition-colors"
        >
          &times;
        </button>
      </form>
      <% } %>
    </div>
    <p class="text-gray-300 leading-relaxed"><%= message.text %></p>
    <div class="mt-5 flex items-center">
      <div class="flex-shrink-0">
        <span
          class="inline-block h-10 w-10 rounded-full overflow-hidden bg-gray-700 flex items-center justify-center"
        >
          <% if (currentUser && currentUser.isMember) { %>
          <span class="text-lg font-semibold text-indigo-300"
            ><%= message.author.charAt(0) %></span
          >
          <% } else { %>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-gray-400"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 11c0 3.517-1.009 6.789-2.756 9.348A10.004 10.004 0 0112 3c4.418 0 8.441 2.983 9.756 7.348C20.01 17.79 19 14.517 19 11c0-3.866-3.134-7-7-7S5 7.134 5 11c0 3.517 1.009 6.789 2.756 9.348A10.004 10.004 0 0112 21a10.004 10.004 0 01-2.756-1.652C10.99 17.79 12 14.517 12 11z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 14a2 2 0 100-4 2 2 0 000 4zM14 14a2 2 0 100-4 2 2 0 000 4z"
            />
          </svg>
          <% } %>
        </span>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-200">
          <%= (currentUser && currentUser.isMember) ? message.author :
          'Anonymous Member' %>
        </p>
        <p class="text-sm text-gray-500">
          Posted on <%= message.createdAt.toLocaleString('en-US', { dateStyle:
          'medium', timeStyle: 'short' }) %>
        </p>
      </div>
    </div>
  </div>
  <% }) %> <% } else { %>
  <div class="text-center p-5 bg-gray-800/50 rounded-xl">
    <p>No messages yet. Be the first to post!</p>
  </div>
  <% } %>
</div>

<%- include('partials/footer') %>
